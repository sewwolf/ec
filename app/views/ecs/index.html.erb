<header class='top-page-header'>
  <%= flash[:notice] %>
  <div class='search-bar-contents'>
   
    <form class="search-form" action="#">
      <input class='input-box' placeholder='キーワードから探す'>
      <button class="search-button">
      </button>
    </form>
  </div>
  <div class='nav'>
    <ul class='lists-left'>
      <li><%= link_to 'カテゴリー', "#", class: "category-list" %></li>
      <li><%= link_to 'ブランド', "#", class: "brand-list" %></li>
    </ul>
    <ul class='lists-right'>
      <% if current_user %>
      <li><%= link_to current_user.first_name, "#", class: "user-nickname" %></li> 
      <li><%= link_to 'ログアウト', logout_path, method: :delete, class: "logout" %></li> 
      <% else%>
      <li><%= link_to 'ログイン', login_path, class: "login" %></li>
      <li><%= link_to '新規登録', new_user_path, class: "sign-up" %></li>
      <% end %>
      
    </ul>
  </div>
</header>