<%= render 'shared/header'%>
<%= form_with model: @user_address , url: users_path, class: 'registration-main', local: true do |f|%>
<div class='form-wrap'>
  <div class='form-header'>
    <h1 class='form-header-text'>
      会員情報入力
    </h1>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">メールアドレス</label>
      <span class="indispensable">必須</span>
    </div>
  <%= f.email_field :email, class:"input-default", placeholder: "PC・携帯どちらでも可", autofocus: true %>
  <%= render 'shared/error_messages', model: @user_address, attribute: :email %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード</label>
      <span class="indispensable">必須</span>
    </div>
  <%= f.password_field :password, class:"input-default",placeholder: "6文字以上の半角英数字" %>
  <p class='info-text'>※英字と数字の両方を含めて設定してください</p>
  <%= render 'shared/error_messages', model: @user_address, attribute: :password %>
   
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード(確認)</label>
      <span class="indispensable">必須</span>
    </div>
  <%= f.password_field :password_confirmation, class:"input-default", placeholder: "同じパスワードを入力" %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">お名前(全角)</label>
      <span class="indispensable">必須</span>
    </div>
  <div class='input-name-wrap'>
    <%= f.text_area :first_name, class:"input-name", placeholder: "例) 佐藤" %>
    <%= f.text_area :last_name, class:"input-name", placeholder: "例) 太郎" %>
  </div>
    <%= render 'shared/error_messages', model: @user_address, attribute: :first_name %>
    <%= render 'shared/error_messages', model: @user_address, attribute: :last_name %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">お名前カナ(全角)</label>
      <span class="indispensable">必須</span>
    </div>
    <div class='input-name-wrap'>
      <%= f.text_area :kana_first_name, class:"input-name", placeholder: "例) サトウ" %>
      <%= f.text_area :kana_last_name, class:"input-name", placeholder: "例) タロウ" %>
    </div>
      <%= render 'shared/error_messages', model: @user_address, attribute: :kana_first_name %>
      <%= render 'shared/error_messages', model: @user_address, attribute: :kana_last_name %>
    </div>
    <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">電話番号</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_field :telephone_number, class:"input-default", placeholder: "例) 08012345678"%>
     <%= render 'shared/error_messages', model: @user_address, attribute: :telephone_number %> 
    </div>
    <div class="form-group">
     <div class='form-text-wrap'>
      <label class="form-text">性別</label>
      <span class="indispensable">必須</span>
     </div>
     <%= f.select :gender, options_for_select(User.genders), {}, class:"select-box" %> 
     <%= render 'shared/error_messages', model: @user_address, attribute: :gender %>
    </div>
   <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">生年月日</label>
      <span class="indispensable">必須</span>
    </div>
    <div class='input-birth-wrap'>
  <%= raw sprintf(
                  f.date_select(
                    :birthday,
                    class:'select-birth',
                    id:"birth-date",
                    use_month_numbers: true,
                    prompt:'--',
                    start_year: 1930,
                    end_year: (Time.now.year - 5),
                    date_separator: '%s'),
                  "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
    </div>
    <%= render 'shared/error_messages', model: @user_address, attribute: :birthday %>
    <h1 class='form-header-text'>
        配送先入力
    </h1>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">郵便番号</label>
        <span class="indispensable">必須</span>
        </div>
      <%= f.text_field :postal_code, class:"input-default", placeholder: "例) 131-0045"%>
      <%= render 'shared/error_messages', model: @user_address, attribute: :postal_code %>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">都道府県</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.select :area, options_for_select(Address.areas), {}, class:"select-box" %>
      <%= render 'shared/error_messages', model: @user_address, attribute: :area %>
    </div>
    <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">市区町村</label>
          <span class="indispensable">必須</span>
        </div>
      <%= f.text_field :municipality, class:"input-default", placeholder: "例) 墨田区"%>
      <%= render 'shared/error_messages', model: @user_address, attribute: :municipality %>
    </div>
    <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">番地</label>
          <span class="indispensable">必須</span>
        </div>
      <%= f.text_field :street_number, class:"input-default", placeholder: "例) 押上 1-1-2"%>
      <%= render 'shared/error_messages', model: @user_address, attribute: :street_number %>
    </div>
    <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">建物名</label>
          <span class="form-any">任意</span>
        </div>
        <%= f.text_field :building_name, class:"input-default", placeholder: "例) スカイプラザ"%>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
          <label class="form-text">メール配信</label>
          <span class="form-any">任意</span>
        </div>
      <%= f.check_box :service_delivery, class:"check-box" %>
        <div class='info-text' >
          メール配信 ※セールや特集、お店や公式オンラインショップでのイベント情報をお届けします。
        </div>
      </div>

    
  <%= f.submit '新規登録', class:'register-blue-btn'%>
 
<% end %>